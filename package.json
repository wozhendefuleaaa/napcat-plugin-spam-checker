{
    "name": "napcat-plugin-template",
    "version": "1.0.0",
    "type": "module",
    "main": "index.mjs",
    "description": "NapCat 插件开发模板 - 快速开始你的插件开发",
    "author": "Your Name",
    "license": "MIT",
    "keywords": [
        "napcat",
        "plugin",
        "qq",
        "template"
    ],
    "dependencies": {
        "napcat-types": "0.0.16"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@types/express": "^5.0.6",
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "vite": "^6.0.0"
    },
    "scripts": {
        "build": "vite build && pnpm run build:webui && pnpm run copy",
        "build:webui": "cd src/webui && pnpm install && pnpm run build",
        "copy": "node scripts/copy-assets.js",
        "dev:webui": "cd src/webui && pnpm run dev",
        "watch": "vite build --watch",
        "typecheck": "tsc --noEmit"
    }
}